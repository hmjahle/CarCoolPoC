{
    "type": "object",
    "title": "Instance for Car Pool Solver",
    "description": "Data model for the carpool solver",
    "required": [
        "instance_name",
        "nbr_nurses",
        "capacity_nurse",
        "benchmark",
        "depot",
        "patients",
        "travel_times"
    ],
    "properties": {
        "instance_name": {
            "type": "string"
        },
        "nbr_nurses": {
            "type": "integer"
        },
        "capacity_nurse": {
            "type": "integer"
        },
        "benchmark": {
            "type": "double"
        },
        "depot": {
            "$ref": "./Depot.yml"
        },
        "tasks": {
            "description": "Array of patients that",
            "type": "array",
            "items": {
                "$ref": "./Task.yml"
            }
        },
        "travel_times": {
            "description": "Travel time matrix for the driving between patients, given as a matrix consisting of doubles.",
            "type": "array",
            "items": {
                "type": "array",
                "items": {
                    "format": "double"
                }
            }
        }
    }
}